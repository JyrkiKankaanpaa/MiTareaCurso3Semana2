<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.curso.jyrki.mitareacurso3semana2.MainActivity">

    <TextView
        android:id="@+id/nombreCompleto_dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre" />

    <TextView
        android:id="@+id/fecha_dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fecha" />

    <TextView
        android:id="@+id/teléfono_dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tele" />
    <TextView
        android:id="@+id/email_dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email" />

    <TextView
        android:id="@+id/descripción_dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="des" />


    <Button
        android:id="@+id/activitybutton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Editar datos"
        android:textSize="35dp"

        />
</LinearLayout>
